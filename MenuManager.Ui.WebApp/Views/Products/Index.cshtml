@model IList<Product>

@{
    ViewBag.Title = "Manage Products";
}

<h1>@ViewBag.Title</h1>

<a class="btn btn-primary" asp-action="Create">Create new</a>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Name</th>
            <th>Price</th>
            <th>Description</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
            </tr>
        }
    </tbody>
</table>
